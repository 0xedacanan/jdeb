            <timezone>+1</timezone>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>Apache License 2</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <scm>
        <connection>scm:svn:http://vafer.org/svn/projects/jdeb/trunk/</connection>
        <developerConnection>scm:svn:https://vafer.org/svn/projects/jdeb/trunk/</developerConnection>
        <url>http://vafer.org/svn/projects/jdeb/trunk/</url>
    </scm>
